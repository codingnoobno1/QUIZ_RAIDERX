@* blazorapp/Components/ProgressHex.razor *@

<div class="hex-p-container" style="--size: @(Size)px; --color: @Color; --percent: @(Value);">
    <svg viewBox="0 0 100 100">
        <path class="track" d="M 50,5 L 89,27.5 L 89,72.5 L 50,95 L 11,72.5 L 11,27.5 Z" fill="none" />
        <path class="progress" d="M 50,5 L 89,27.5 L 89,72.5 L 50,95 L 11,72.5 L 11,27.5 Z" fill="none" 
              style="stroke-dasharray: 275; stroke-dashoffset: @(275 * (1 - Value / 100.0));" />
    </svg>
    <div class="hex-p-content">
        <span class="val">@Value%</span>
        <span class="lab">@Label</span>
    </div>
</div>

<style>
    .hex-p-container {
        width: var(--size);
        height: var(--size);
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    svg {
        position: absolute;
        width: 100%;
        height: 100%;
        filter: drop-shadow(0 0 5px var(--color));
    }

    .track {
        stroke: rgba(255, 255, 255, 0.05);
        stroke-width: 3;
    }

    .progress {
        stroke: var(--color);
        stroke-width: 4;
        stroke-linecap: round;
        transition: stroke-dashoffset 1s ease-out;
    }

    .hex-p-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family: 'Space Grotesk', sans-serif;
        z-index: 2;
    }

    .val { font-size: 1.2rem; font-weight: 800; color: #fff; text-shadow: 0 0 10px var(--color); }
    .lab { font-size: 0.55rem; color: var(--color); text-transform: uppercase; letter-spacing: 2px; }
</style>

@code {
    [Parameter] public int Value { get; set; } = 40;
    [Parameter] public string Label { get; set; } = "SYSTEM";
    [Parameter] public int Size { get; set; } = 150;
    [Parameter] public string Color { get; set; } = "#00FFFF";
}
