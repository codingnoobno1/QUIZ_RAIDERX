@* blazorapp/Components/Index.razor *@
@page "/"

<CyberHero />

<div class="main-content">
    <div class="row">
        <div class="col-left">
            <CyberMetrics />
        </div>
        <div class="col-right">
            <GlassCard>
                <div class="content-header">
                    <span class="icon">âš¡</span>
                    <h2>ACTIVE OPERATIONS</h2>
                </div>
                <ul class="ops-list">
                    <li><span class="tag">01</span> Neural Network Training... <span class="status">RUNNING</span></li>
                    <li><span class="tag">02</span> Encryption Protocol Delta... <span class="status">RUNNING</span></li>
                    <li><span class="tag">03</span> Database Sync Alpha... <span class="status pulse">PENDING</span></li>
                </ul>
                <button class="neon-button full">GENERATE REPORT</button>
            </GlassCard>
