    </div>

    <CyberTeamGrid />
</div>

<style>
    .main-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .row {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        margin-bottom: 5rem;
    }

    @@media (min-width: 960px) {
        .row {
            flex-direction: row;
            align-items: flex-start;
        }
        .col-left { flex: 1; }
        .col-right { flex: 1.5; }
    }

    .content-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
        border-bottom: 1px solid rgba(0, 255, 255, 0.2);
        padding-bottom: 1rem;
    }

    .content-header h2 {
        font-family: 'Space Grotesk', sans-serif;
        color: #fff;
        font-size: 1.2rem;
        letter-spacing: 3px;
        margin: 0;
    }

    .ops-list {
        list-style: none;
        padding: 0;
        margin: 0 0 2rem;
    }

    .ops-list li {
        background: rgba(255,255,255,0.02);
        margin-bottom: 10px;
        padding: 15px;
        border-radius: 4px;
        display: flex;
        align-items: center;
        font-family: monospace;
        font-size: 0.85rem;
        border-left: 2px solid transparent;
        transition: all 0.3s;
    }

    .ops-list li:hover {
        background: rgba(0, 255, 255, 0.05);
        border-left-color: #00FFFF;
        padding-left: 20px;
    }

    .tag { color: #FF1493; margin-right: 15px; font-weight: bold; }
    .status { margin-left: auto; color: #00FFFF; font-weight: bold; font-size: 0.7rem; }
    .status.pulse { animation: flicker 1s infinite; color: #FF1493; }

    .neon-button.full { width: 100%; margin-top: 1rem; }

    @keyframes flicker {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.3; }
    }
</style>
