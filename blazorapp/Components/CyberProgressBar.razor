@* blazorapp/Components/CyberProgressBar.razor *@

<div class="p-container" style="--percent: @(Value); --color: @(Color);">
    <div class="p-header">
        <span class="p-label">@Label</span>
        <span class="p-value">@Value%</span>
    </div>
    <div class="p-track">
        <div class="p-fill">
            <div class="p-glow"></div>
            <div class="p-scan"></div>
        </div>
        <div class="p-markers">
            <span></span><span></span><span></span><span></span><span></span>
        </div>
    </div>
</div>

<style>
    .p-container {
        width: 100%;
        margin-bottom: 20px;
        font-family: 'Space Grotesk', sans-serif;
    }

    .p-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
        font-size: 0.75rem;
        letter-spacing: 2px;
        color: var(--color);
        opacity: 0.8;
    }

    .p-track {
        height: 12px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        position: relative;
        border-radius: 2px;
        overflow: hidden;
    }

    .p-fill {
        height: 100%;
        width: calc(var(--percent) * 1%);
        background: var(--color);
        position: relative;
        transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 0 15px var(--color);
    }

    .p-glow {
        position: absolute;
        inset: 0;
        box-shadow: inset 0 0 10px rgba(255, 255, 255, 0.5);
    }

    .p-scan {
        position: absolute;
        width: 50%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        animation: p-scan 2s linear infinite;
    }

    .p-markers {
        position: absolute;
        inset: 0;
        display: flex;
        justify-content: space-evenly;
        pointer-events: none;
    }

    .p-markers span {
        width: 1px;
        height: 100%;
        background: rgba(255, 255, 255, 0.2);
    }

    @keyframes p-scan {
        0% { transform: translateX(-200%); }
        100% { transform: translateX(200%); }
    }
</style>

@code {
    [Parameter] public int Value { get; set; } = 50;
    [Parameter] public string Label { get; set; } = "MODULE LOADING";
    [Parameter] public string Color { get; set; } = "#00FFFF";
}
