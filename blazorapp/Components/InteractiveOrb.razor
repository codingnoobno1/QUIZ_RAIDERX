@* blazorapp/Components/InteractiveOrb.razor *@

<div class="orb-container @(Hovered ? "hovered" : "")" 
     @onmouseenter="() => Hovered = true" 
     @onmouseleave="() => Hovered = false"
     style="--size: @(Size)px;">
    
    <div class="orb-aura"></div>
    <div class="orb-rings">
        <div class="ring r1"></div>
        <div class="ring r2"></div>
        <div class="ring r3"></div>
    </div>
    
    <div class="orb-core">
        <div class="core-glow"></div>
        <div class="core-surface"></div>
        <div class="core-inner"></div>
    </div>

    <div class="orb-data">
        <span class="label">@Label</span>
        <span class="value">@Value%</span>
    </div>
</div>

<style>
    .orb-container {
        position: relative;
        width: var(--size);
        height: var(--size);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .orb-container.hovered {
        transform: scale(1.1);
    }

    /* Outer Energy Field */
    .orb-aura {
        position: absolute;
        inset: -20%;
        background: radial-gradient(circle, rgba(0, 255, 255, 0.1) 0%, transparent 70%);
        border-radius: 50%;
        filter: blur(10px);
        animation: pulse-aura 4s infinite alternate;
    }

    /* Rotating Tech Rings */
    .orb-rings {
        position: absolute;
        inset: -10%;
        pointer-events: none;
    }

    .ring {
        position: absolute;
        inset: 0;
        border-radius: 50%;
        border: 1px solid rgba(0, 255, 255, 0.1);
        border-top-color: rgba(255, 20, 147, 0.6);
        animation: rotate-ring linear infinite;
    }

    .r1 { animation-duration: 3s; }
    .r2 { animation-duration: 5s; animation-direction: reverse; inset: 10%; border-top-color: #00FFFF; }
    .r3 { animation-duration: 8s; inset: 20%; border-top-color: #FFF; }

    /* The Solid Core */
    .orb-core {
        position: relative;
        width: 60%;
        height: 60%;
        border-radius: 50%;
        background: #000;
        overflow: hidden;
        border: 1px solid rgba(0, 255, 255, 0.3);
    }

    .core-surface {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 30% 30%, #00ffff44, transparent);
        box-shadow: inset 0 0 20px rgba(0, 255, 255, 0.2);
    }

    .core-inner {
        position: absolute;
        inset: 20%;
        background: rgba(0, 255, 255, 0.8);
        border-radius: 50%;
        filter: blur(8px);
        animation: core-flicker 2s infinite;
    }

    /* Data Overlay */
    .orb-data {
        position: absolute;
        z-index: 10;
        display: flex;
        flex-direction: column;
        align-items: center;
        color: #fff;
        font-family: 'Space Grotesk', sans-serif;
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.8);
    }

    .orb-data .label { font-size: 0.7rem; letter-spacing: 2px; opacity: 0.7; }
    .orb-data .value { font-size: 1.2rem; font-weight: 800; }

    /* Animations */
    @keyframes pulse-aura {
        0% { transform: scale(0.95); opacity: 0.3; }
        100% { transform: scale(1.05); opacity: 0.6; }
    }

    @keyframes rotate-ring {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    @keyframes core-flicker {
        0%, 100% { opacity: 0.5; transform: scale(1); }
        50% { opacity: 1; transform: scale(1.1); }
    }
</style>

@code {
    [Parameter] public int Size { get; set; } = 150;
    [Parameter] public string Label { get; set; } = "SYSTEM";
    [Parameter] public int Value { get; set; } = 88;
    
    private bool Hovered { get; set; }
}
