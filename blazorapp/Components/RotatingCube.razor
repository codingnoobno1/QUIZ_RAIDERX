@* blazorapp/Components/RotatingCube.razor *@

<div class="cube-container" style="--size: @(Size)px; --half-size: @(Size/2)px; --perspective: @(Size*10)px;">
    <div class="cube">
        <div class="cube-face front"><img src="pixel.jpg" alt="Pixel Logo" /></div>
        <div class="cube-face back"><img src="pixel.jpg" alt="Pixel Logo" /></div>
        <div class="cube-face left"><img src="pixel.jpg" alt="Pixel Logo" /></div>
        <div class="cube-face right"><img src="pixel.jpg" alt="Pixel Logo" /></div>
        <div class="cube-face top"><img src="pixel.jpg" alt="Pixel Logo" /></div>
        <div class="cube-face bottom"><img src="pixel.jpg" alt="Pixel Logo" /></div>
    </div>
</div>

<style>
    .cube-container {
        width: calc(var(--size) * 2);
        height: calc(var(--size) * 2);
        perspective: var(--perspective);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .cube {
        width: var(--size);
        height: var(--size);
        position: relative;
        transform-style: preserve-3d;
        animation: rotate3D-cube 10s infinite linear;
    }

    .cube-face {
        position: absolute;
        width: var(--size);
        height: var(--size);
        background: rgba(0, 0, 0, 0.95);
        border: 2px solid #FF1493;
        box-shadow: 0px 0px 10px 2px rgba(255, 20, 147, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        animation: colorCycle-cube 10s infinite alternate;
    }

    .cube-face img {
        width: 90%;
        height: 90%;
        object-fit: contain;
    }

    .front  { transform: translateZ(var(--half-size)); }
    .back   { transform: rotateY(180deg) translateZ(var(--half-size)); }
    .left   { transform: rotateY(-90deg) translateZ(var(--half-size)); }
    .right  { transform: rotateY(90deg) translateZ(var(--half-size)); }
    .top    { transform: rotateX(90deg) translateZ(var(--half-size)); }
    .bottom { transform: rotateX(-90deg) translateZ(var(--half-size)); }
</style>

@code {
    [Parameter] public int Size { get; set; } = 200;
}
